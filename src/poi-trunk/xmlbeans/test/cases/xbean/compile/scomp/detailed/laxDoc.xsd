                    <xs:sequence>
                        <xs:element name="foobaz" type="pre:String"/>
                    </xs:sequence>
                </xs:complexType>
                provided content is XHTML compliant and no elements use the schema namespaces
            </xs:documentation>
        </xs:annotation>
                <xs:sequence>
                    <xs:element name="foobaz" type="xs:string">
