    <xsd:complexType name="AttrUseProhibited">
        <xsd:complexContent>
            <xsd:restriction base="at:LocalAttrUseT">
                 <xsd:attribute name="attOpt" type="xsd:string" use="prohibited"/>
            </xsd:restriction>
